---
import Subpage from "@layouts/Subpage.astro";

import { db } from "@lib/database";
import { employee, team } from "@lib/database/schema";

import Remove from "@components/buttons/Remove.svelte";
import HTMLInput from "@components/form/HTMLInput.svelte";
import HTMLSubmit from "@components/form/HTMLSubmit.svelte";

import { count, eq } from "drizzle-orm";
import * as m from "@paraglide/messages";
import { Icon } from "astro-icon/components";

const teams = await db
  .select({
    id: team.id,
    name: team.name,
    employeesCount: count(employee),
  })
  .from(team)
  .leftJoin(employee, eq(employee.teamId, team.id))
  .groupBy(team.id)
  .orderBy(team.name);
---

<Subpage title="Teams">
  <div class="flex flex-col gap-4">
    <div class="flex flex-col gap-4">
      <h3 class="font-bold text-3xl">{m.teams()}</h3>
      <form method="POST" action="/api/teams" class="flex flex-col sm:flex-row gap-2">
        <HTMLInput name="name" placeholder={m.name()} type="text" required class="w-full" />
        <HTMLSubmit label={m.add()} class="self-end" />
      </form>

      {
        teams.length === 0 ? (
          <span class="font-bold text-xl text-center">{m.no_teams()}</span>
        ) : (
          <table class="w-full text-sm text-left rtl:text-right">
            <thead class="text-xs bg-stone-100 dark:bg-stone-900">
              <tr>
                <th class="px-6 py-3">
                  <div class="flex flex-row gap-2 items-center">
                    <span>{m.name()}</span>
                    <Icon name="mdi:edit" />
                  </div>
                </th>
                <th class="px-6 py-3">{m.employees_count()}</th>
                <th class="px-6 py-3">{m.actions()}</th>
              </tr>
            </thead>

            <tbody>
              {teams.map((team) => {
                return (
                  <tr class="even:bg-stone-200 dark:even:bg-stone-900">
                    <td class="px-4">
                      <form method="POST" action={`/api/teams/${team.id}/rename`}>
                        <input type="text" id="team_name" name="team_name" value={team.name} class="bg-transparent" />
                        <input type="submit" hidden />
                      </form>
                    </td>
                    <td class="px-4">
                      <span>{team.employeesCount}</span>
                    </td>
                    <td class="px-4 py-2">
                      <div class="flex flex-row gap-2 items-center">
                        <a href={`/teams/${team.id}`}>{m.edit()}</a>
                        <form method="POST" action={`/api/teams/${team.id}/delete`}>
                          <Remove />
                        </form>
                      </div>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        )
      }
    </div>
  </div>
</Subpage>
