---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  text: string;
  href: string;
  class?: string;
}

const props = Astro.props;
---

<button class={`bg-red-500 text-white text-sm p-2 sm:px-2 sm:py-1 rounded-full sm:rounded-xl hover:bg-opacity-75 transition-colors ${props.class}`}>
  <a href={props.href} class="flex flex-row items-center gap-2">
    <Icon name={props.icon} />
    <span class="hidden sm:block">{props.text}</span>
  </a>
</button>
